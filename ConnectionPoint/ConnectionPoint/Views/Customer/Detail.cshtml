@model List<ProjectDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add new customer</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Customer")">Customers</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Get","Customer",new { Id= Model.FirstOrDefault()?.Customer?.Id })">@Model.FirstOrDefault()?.Customer?.Name</a></li>
                    <li class="breadcrumb-item active">Detais</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <a asp-controller="Project" asp-action="Add" class="btn btn-block bg-gradient-success btn-lg">
                            Add
                        </a>
                        <table id="customerDetailTable" class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model)
                                {
                                    <tr>
                                        <td>@project.Code</td>
                                        <td>@project.Description</td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-info">Detail</button>
                                                <button type="button" class="btn btn-info">Edit</button>
                                                <button type="button" class="btn btn-info">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>

    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

