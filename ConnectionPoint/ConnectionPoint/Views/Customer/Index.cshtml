@model List<CustomerDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Customer List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="breadcrumb-item active"> Customers</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <a asp-controller="Customer" asp-action="Add" class="btn btn-block bg-gradient-success btn-lg">
                            Add
                        </a>
                        <table class="table table-hover text-nowrap" id="customerTable">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Customer Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model)
                                {
                                    <tr>
                                        <td>@customer.Name</td>
                                        <td>@customer.Description</td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary" btn btn-info" method="GET" asp-controller="Customer" asp-action="Get" asp-route-id="@customer.Id">Details</a>
                                                <a class="btn btn-primary" btn btn-info" method="GET" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                                                <form method="post">
                                                    <input name="id" type="hidden" value=@customer.Id />
                                                    <button type="submit" class="btn btn-primary" asp-controller="Customer" asp-action="Delete">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>

    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
